<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Publicar Producto</h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        <div class="form-group">
          <%= f.text_field :price, class: "form-control input-lg", placeholder: "Ingrese el precio del producto" %>
        </div>
        <div class="form-group">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
            <div>
            <%= b.check_box %>
            <%= b.label %>
            </div>
        <% end %>
        </div>

        <div>
          <%= f.submit "Publicar Producto", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>