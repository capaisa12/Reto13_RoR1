<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <h1>Productos</h1>
    <table class="table">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Categorias</th>
        <th>Acciones</th>
    </tr>
    <% @products.each do |product| %>
        <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><% product.categories.each do |category| %>
                -<%= category.name %></br><% end %></td>        
        <td><%= link_to "Editar", edit_product_path(product) %></td>
        </tr>
    <% end %>
    </table>